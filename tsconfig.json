{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "ES2021",
        "module": "commonjs",
        "strict": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false
    }
}
